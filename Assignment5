<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insert/Delete/Update Student</title>
</head>
<body>
    <div>
        <form>
            Enter your name: <input type="text" id="id1" name="studentname">
            Enter student marks: <input type="text" id="id2" name="studentmarks">
            <button id="btn" type="button">Insert</button>
            <button id="deletebtn" type="button">Delete</button>
            <button id="updatebtn" type="button">Update</button>
        </form>
    </div>

    <script>
        // Insert works as before, takes values from inputs
        async function senddata(){
            let x = document.getElementById("id1").value;
            let y = document.getElementById("id2").value;

            let formdata1 = new FormData();
            formdata1.append("studentname", x);
            formdata1.append("studentmarks", y);

            let response = await fetch("http://localhost/testing_learn_php/getdata1.php", {
                method: "POST",
                body: formdata1
            });

            let data = await response.text();
            alert(data);
        }

        // Delete asks for name
        async function deletedata(){
            let x = prompt("Enter the student name you want to delete:");
            if (!x) return; // cancel if empty

            let formdata2 = new FormData();
            formdata2.append("studentname", x);

            let response = await fetch("http://localhost/testing_learn_php/delete.php", {
                method: "POST",
                body: formdata2
            });

            let data = await response.text();
            alert(data);
        }

        // Update asks for name + new marks
        async function updatedata(){
            let x = prompt("Enter the student name you want to update:");
            if (!x) return;

            let y = prompt("Enter the new marks:");
            if (!y) return;

            let formdata3 = new FormData();
            formdata3.append("studentname", x);
            formdata3.append("studentmarks", y);

            let response = await fetch("http://localhost/testing_learn_php/update.php", {
                method: "POST",
                body: formdata3
            });

            let data = await response.text();
            alert(data);
        }

        //Buttons
        document.getElementById("btn").addEventListener("click", senddata);
        document.getElementById("deletebtn").addEventListener("click", deletedata);
        document.getElementById("updatebtn").addEventListener("click", updatedata);
    </script>
</body>
</html>
sample.html